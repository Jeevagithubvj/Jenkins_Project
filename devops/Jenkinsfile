pipeline {
    agent any
    stages {
        stage('Git webhook Checkout') {
            steps {
                 sh 'echo "Git checkout passed"'
            }
        }
        stage('Compile') {
            steps {
                sh 'cd devops/ && mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'cd devops/ && mvn test'
            }
        }
        stage('Build') {
            steps {
                sh 'cd devops/ && mvn clean install'
            }
        }
        stage('Static Code Analysis') {
            steps {
                withSonarQubeEnv('sonarqubeserver') {
                    sh 'cd devops/ && mvn sonar:sonar'
                }
            }
        }
        stage('Build and Push Docker Image') {
            steps {
                script {
                    def dockerImage = "jeeva1235/cicd:${env.BUILD_NUMBER}"
                    sh "cd devops/ && docker build -t ${dockerImage} ."
                    docker.withRegistry('https://index.docker.io/v1/', 'dcoker_cred') {
                        docker.image(dockerImage).push()
                    }
                }
            }
        }
        stage('Update GitHub Repository with Manifest') {
            environment {
                GIT_CREDENTIALS_ID = 'github-cred'
                GIT_REPO_URL = 'https://github.com/username/repository-name.git'
                GIT_BRANCH = 'main'
            }
            steps {
                script {
                    sh '''
                        git clone ${GIT_REPO_URL}
                        cd repository-name
                        git checkout ${GIT_BRANCH}
                    '''
                    
                    sh '''
                        sed -i 's|image: jeeva1235/cicd:.*|image: jeeva1235/cicd:${BUILD_NUMBER}|' k8s/manifest.yaml
                    '''
                    
                    sh '''
                        git config user.email "your-email@example.com"
                        git config user.name "your-github-username"
                        git add k8s/manifest.yaml
                        git commit -m "Update manifest with Docker image tag ${BUILD_NUMBER}"
                        git push origin ${GIT_BRANCH}
                    '''
                }
            }
        }
    }
}
