pipeline {
    agent any
    stages {
        stage('Git webhook Checkout') {
            steps {
                sh 'echo "Git checkout passed"'
            }
        }
        stage('Compile') {
            steps {           
                sh 'cd devops/ && mvn compile'
            }
        }
        stage('Test') {
            steps {             
                sh 'cd devops/ && mvn test'
            }
        }
        stage('Build') {
            steps {           
                sh 'cd devops/ && mvn clean install'
            }
        }
        stage('static code analysis') {
            steps {
                withSonarQubeEnv('sonarqubeserver') {            
                    sh 'cd devops/ && mvn sonar:sonar'
                }
            }
        }
         stages {
            stage('Build and Push Docker Image') {
             steps {
                script {
                    def dockerImage = "abhishekf5/ultimate-cicd:${env.BUILD_NUMBER}"
                    sh "docker build -t ${dockerImage} ."
                    docker.withRegistry('https://hub.docker.com/', 'your-credentials-id') {
                        docker.image(dockerImage).push()
                    }
                }
            }
        }
    }
}
